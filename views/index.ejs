<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>

    <!-- Blog theme from Bootstrap -->
    <link href="stylesheets/blog.css" rel="stylesheet">
</head>
<body class="container">

<header>
    <%- include('partials/header') %>
</header>
<div>&nbsp;</div>
<main role="main" class="container">

    <div class="row">
        <div class="col-md-8 blog-main">

            <!-- Bio card -->
            <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-primary">Bio</strong>
                    <h3 class="mb-0">Ed Hollingsworth</h3>
                    <div class="mb-1 text-muted">Senior Software Architect</div>
                    <p class="card-text mb-auto">Mr. Hollingsworth is a 20+ year veteran of the IT industry, specializing in Solution Architecture and enterprise Java development.</p>
                    <a href="/bio" class="stretched-link">Continue reading</a>
                </div>
                <div class="col-auto d-none d-lg-block">
                    <img src="images/square/headshot2_square.jpg" alt="Ed" class="" style="height:250px">
                </div>
            </div>

        </div><!-- /.blog-main -->

        <aside class="col-md-4 blog-sidebar">
            <div class="p-4 mb-3 bg-light rounded">
                <h4 class="font-italic">About</h4>
                <p class="mb-0">Welcome to my personal website!  I'm currently in the process of giving it a much needed facelift using
                    Node.js, MongoDB, and Bootstrap.  It is also now being hosted on an AWS instance in the cloud, which will allow
                    me greater flexibility to implement various features in the future.</p>
            </div>
        </aside><!-- /.blog-sidebar -->

    </div><!-- /.row -->

    <!--<div class="jumbotron">
        <h1>Welcome!</h1>
    </div>-->
</main>

<footer>
    <%- include('partials/footer') %>
</footer>

</body>
</html>
